<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clmyroom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_150sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/background_switch_board_inner_room">

    <ImageView
        android:id="@+id/imageViewRecycleViewMyRoomEdit"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:background="@drawable/ic_group_31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>
    <ImageView
        android:id="@+id/imageViewRecycleViewMyRoomdelete"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:background="@drawable/d3"
        app:layout_constraintEnd_toEndOf="@id/imageViewRecycleViewMyRoomEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_90sdp"/>

    <ImageView
        android:id="@+id/imageViewIconMyRoom"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/double_bed_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <EditText
        android:id="@+id/EdittextRecycleViewMyRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed Room"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:inputType="none"
        android:maxLines="1"
        android:ems="10"
        android:lines="1"
        android:maxLength="15"
        android:enabled="false"
        android:singleLine="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/imageViewIconMyRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/Textviewrefence"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/EdittextRecycleViewMyRoom"
        ></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>