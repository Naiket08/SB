<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0B0B0B">

    <ImageView
        android:id="@+id/imageViewRoomInnerLights"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/roombulbs"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewControlSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Your Switch \nBoard"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imageViewRoomInnerLights"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewRoomInnerRoomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room 1"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/muli"
        app:layout_constraintTop_toBottomOf="@id/textViewControlSB"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_40sdp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomInnerRoomNo"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_18sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="134dp"
                    android:layout_height="157dp"
                    android:background="@drawable/background_switch_board_inner_room"
                    android:layout_marginTop="@dimen/_18sdp">

                    <ImageView
                        android:id="@+id/imageViewRoomInnerEditSB"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/ic_group_31"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageView
                        android:id="@+id/imageViewRoomInnerInfo"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/info"
                        app:layout_constraintEnd_toStartOf="@id/imageViewRoomInnerEditSB"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageButton
                        android:id="@+id/roominnerbutton1"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_66sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/switchicon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewRoomInnerSB1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch Board 1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/muli_semibold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                    <TextView
                        android:id="@+id/textViewRoomInnerSBType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Lights and 1 Fan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        android:fontFamily="@font/muli"
                        app:layout_constraintTop_toBottomOf="@id/textViewRoomInnerSB1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="134dp"
                    android:layout_height="157dp"
                    android:background="@drawable/background_switch_board_inner_room"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageViewRoomInnerEditSB2"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/ic_group_31"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageView
                        android:id="@+id/imageViewRoomInnerInfo2"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/info"
                        app:layout_constraintEnd_toStartOf="@id/imageViewRoomInnerEditSB2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageButton
                        android:id="@+id/roominnerbutton2"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_66sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/switchicon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewRoomInnerSB2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch Board 2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/muli_semibold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                    <TextView
                        android:id="@+id/textViewRoomInnerSBType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Lights and 2 Fans"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        android:fontFamily="@font/muli"
                        app:layout_constraintTop_toBottomOf="@id/textViewRoomInnerSB2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="134dp"
                    android:layout_height="157dp"
                    android:background="@drawable/background_switch_board_inner_room"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageViewRoomInnerEditSB3"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/ic_group_31"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageView
                        android:id="@+id/imageViewRoomInnerInfo3"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/info"
                        app:layout_constraintEnd_toStartOf="@id/imageViewRoomInnerEditSB3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageButton
                        android:id="@+id/roominnerbutton3"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_66sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/switchicon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewRoomInnerSB3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch Board 3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/muli_semibold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                    <TextView
                        android:id="@+id/textViewRoomInnerSBType3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Lights and 1 Appliance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        android:fontFamily="@font/muli"
                        app:layout_constraintTop_toBottomOf="@id/textViewRoomInnerSB3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_9sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="134dp"
                    android:layout_height="157dp"
                    android:background="@drawable/background_switch_board_inner_room"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageViewRoomInnerAddSB"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/addbuttonblack"
                        android:layout_marginTop="@dimen/_22sdp"/>

                    <TextView
                        android:id="@+id/textViewRoomInnerAddNewSB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add new \nSwitch Board"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/muli_semibold"
                        app:layout_constraintTop_toBottomOf="@id/imageViewRoomInnerAddSB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>