<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0B0B0B">

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/muli"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_52sdp"/>

    <TextView
        android:id="@+id/textViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:textSize="@dimen/_10ssp"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/textViewCategory"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_26sdp"/>

    <Button
        android:id="@+id/buttonLights"
        android:layout_width="@dimen/_108sdp"
        android:layout_height="@dimen/_127sdp"
        app:layout_constraintTop_toBottomOf="@id/textViewAll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_26sdp"
        android:drawableTop="@drawable/ic_idea"
        android:text="@string/lights"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/muli_semibold"
        android:paddingTop="@dimen/_20sdp"
        android:background="@drawable/button_pressed"/>

    <Button
        android:id="@+id/buttonFans"
        android:layout_width="@dimen/_108sdp"
        android:layout_height="@dimen/_127sdp"
        app:layout_constraintTop_toBottomOf="@id/textViewAll"
        app:layout_constraintStart_toEndOf="@id/buttonLights"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:drawableTop="@drawable/ic_fan"
        android:text="@string/fans"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/muli_semibold"
        android:paddingTop="@dimen/_20sdp"
        android:background="@drawable/button_pressed"/>

    <Button
        android:id="@+id/buttonAppliances"
        android:layout_width="@dimen/_108sdp"
        android:layout_height="@dimen/_127sdp"
        app:layout_constraintTop_toBottomOf="@id/buttonLights"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_26sdp"
        android:drawableTop="@drawable/ic_appliances"
        android:text="@string/appliances"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/muli_semibold"
        android:paddingTop="@dimen/_20sdp"
        android:background="@drawable/button_pressed"/>

</androidx.constraintlayout.widget.ConstraintLayout>