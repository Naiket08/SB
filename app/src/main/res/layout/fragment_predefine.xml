<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/editboxbedrroom">

          <EditText
              android:id="@+id/predefineRoomedit"
              android:layout_width="@dimen/_111sdp"
              android:layout_height="@dimen/_20sdp"
              android:textSize="@dimen/_14sdp"
              android:text="Switch Board 1"
              android:textColor="#FFFFFF"
              android:layout_gravity="center"
              android:background="@android:color/transparent"
              android:layout_marginLeft="@dimen/_20sdp">


          </EditText>

            <Button
                android:id="@+id/predefinebuttonedit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_110sdp"
                android:layout_gravity="center"
                android:background="@drawable/editicon"
                ></Button>



        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Customise Your Need"
            android:textSize="@dimen/_24sdp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/muli"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            ></TextView>



        <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/editboxbedrroom">

            <ImageView
                android:id="@+id/imageviewmain"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/switchicon"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp">

            </ImageView>

            <EditText

                android:id="@+id/edittextmain"
                android:layout_width="@dimen/_111sdp"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"
                android:text=""
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/_5sdp">


            </EditText>

            <Button
                android:id="@+id/buttonmain"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@drawable/editicon"
                ></Button>

            <ImageView
                android:id="@+id/imageviewmain1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/ideaicon">

            </ImageView>

            <Button
                android:id="@+id/buttonmain2"
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_3sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/downarrow"
                ></Button>


        </LinearLayout>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>