<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_59sdp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/editboxbedrroom">

          <EditText
              android:id="@+id/predefineRoomedit"
              android:layout_width="@dimen/_111sdp"
              android:layout_height="@dimen/_20sdp"
              android:textSize="@dimen/_14sdp"
              android:text="Switch 1"
              android:inputType="none"
              android:textColor="#FFFFFF"
              android:layout_gravity="center"
              android:maxLines="1"
              android:ems="10"
              android:lines="1"
              android:maxLength="15"
              android:enabled="false"
              android:singleLine="true"
              android:background="@android:color/transparent"
              android:scrollbars="none"
              android:layout_marginLeft="@dimen/_20sdp">


          </EditText>

            <Button
                android:id="@+id/predefinebuttonedit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_110sdp"
                android:layout_gravity="center"
                android:background="@drawable/editicon"
                ></Button>



        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Customise Your Need"
            android:textSize="@dimen/_24sdp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/muli"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            ></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPredefine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            app:layout_constraintTop_toBottomOf="@id/textViewTopText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"/>


        <Button
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/boardbackground"></Button>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>