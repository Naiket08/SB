<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    tools:context=".Login">

        <ImageView
            android:id="@+id/imageViewWaveTopPinOne"
            android:layout_width="1440dp"
            android:layout_height="@dimen/_210sdp"
            android:background="@drawable/ic_wave"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPinOne"
            android:layout_width="@dimen/_126sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_135sdp"
            android:fontFamily="@font/muli"
            android:text="Login"
            android:textColor="#F8B109"
            android:textSize="@dimen/_37ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPinOnetwo"
            android:layout_width="@dimen/_178sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:fontFamily="@font/muli"
            android:text="Welcome To The Application "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPinOne" />

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/_229sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/username"
            android:fontFamily="@font/muli"
            android:hint="Username"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPinOnetwo" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="@dimen/_229sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/username"
            android:fontFamily="@font/muli"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username" />

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/muli_semibold"
            android:text="Forgot Password?"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="@id/Password"
            app:layout_constraintTop_toBottomOf="@id/Password" />

        <ImageButton
            android:id="@+id/SubmitButton"
            android:layout_width="@dimen/_229sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:background="@drawable/login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/forgetpassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgetpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>