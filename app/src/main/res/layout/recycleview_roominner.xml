<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="134dp"
    android:layout_height="157dp"
    android:background="@drawable/background_switch_board_inner_room"
    android:layout_marginLeft="@dimen/_5sdp">
    <ImageView
        android:id="@+id/imageViewRoomInnerEditSB"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:background="@drawable/ic_group_31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>

    <ImageView
        android:id="@+id/imageViewRoomInnerInfo"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:background="@drawable/info"
        app:layout_constraintEnd_toStartOf="@id/imageViewRoomInnerEditSB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>

    <ImageButton
        android:id="@+id/roominnerbutton1"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_66sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/switchicon"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textViewRoomInnerSB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Board 1"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:inputType="none"
        android:maxLines="1"
        android:ems="10"
        android:lines="1"
        android:maxLength="15"
        android:enabled="false"
        android:singleLine="true"
        android:paddingStart="@dimen/_9sdp"
        android:background="@android:color/transparent"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_80sdp" />

    <TextView
        android:id="@+id/textViewRoomInnerSBType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Lights and 1 Fan"
        android:textColor="@color/white"
        android:textSize="@dimen/_6ssp"
        android:fontFamily="@font/muli"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomInnerSB1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_9sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>