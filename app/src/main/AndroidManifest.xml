<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sb">

    <uses-permission android:name="android.permission.INTERNET" />
    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SB">
        <activity android:name=".ConfirmPinToChange"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".UserProfile"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegisterScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".Home"
            android:screenOrientation="portrait"/>
        <activity android:name=".Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".FinalPin"
            android:screenOrientation="portrait"/>
        <activity android:name=".RePin"
            android:screenOrientation="portrait"/>
        <activity android:name=".PinOne"
            android:screenOrientation="portrait"/>
        <activity android:name=".TermsAndConditions"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>